<% if @cache %>
  <% if current_user.favorited?(@cache) %>

        <%= link_to toggle_favorite_cach_path(@cache), remote: true,
          data: { 'turbo-method': :post } do %>
          <i data-toggle-favorite-target="link" data-action="click->toggle-favorite#toggleIconFill" class="fa-solid fa-bookmark"></i>
        <% end %>

    <% else %>

        <%= link_to toggle_favorite_cach_path(@cache), remote: true,
          data: { 'turbo-method': :post } do %>
          <i data-toggle-favorite-target="link" data-action="click->toggle-favorite#toggleIconFill" class="fa-regular fa-bookmark"></i>
        <% end %>

    <% end %>
<% end %>

