<%= simple_form_for @cache,
    html: { class: @cache.errors.any? ? "" : "",
            style: "z-index: 5; position: absolute; top: 50px;",
            data: { controller: "map",
                    map_target: 'form' }} do |f| %>
  <%= f.date_field :found_on, placeholder: "date found" %>
  <%= f.text_area :description, size: "70x5", placeholder: "description" %>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :latitude %>
  <%= f.submit "Add cache", class: "btn btn-sm btn-primary btn-block mt-2" %>
<% end %>
