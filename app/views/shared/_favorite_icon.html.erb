<% if @cache %>
  <%= link_to toggle_favorite_cach_path(@cache), remote: true,
    data: { 'turbo-method': :post } do %>
    <i data-toggle-favorite-target="link" data-action="click->toggle-favorite#toggleIconFill" class="<%= current_user.favorited?(@cache) ? 'fa-solid fa-bookmark' : 'fa-regular fa-bookmark'%>"></i>
  <% end %>
<% end %>

<% if @spec %>
  <%= link_to toggle_favorite_species_path(@spec), remote: true,
    data: { 'turbo-method': :post } do %>
    <i data-toggle-favorite-target="link" data-action="click->toggle-favorite#toggleIconFill" class="<%= current_user.favorited?(@spec) ? 'fa-solid fa-bookmark' : 'fa-regular fa-bookmark' %>"></i>
  <% end %>
<% end %>
